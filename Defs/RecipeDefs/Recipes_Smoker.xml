	<RecipeDef>
		<defName>SRV_SmokerMeat</defName>
		<label>smoke meat (10)</label>
		<description>Smoke meat to preserve it. Tasty, but hard to chew. It lasts a long time without refrigeration.</description>
		<jobString>Smoking meat.</jobString>
		<workAmount>2500</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
					</categories>
				</filter>
				<count>0.5</count>
			</li>
		</ingredients>
		<products>
			<SRV_SmokedMeat>10</SRV_SmokedMeat>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>MeatRaw</li>
			</categories>
			<disallowedThingDefs>
				<li>SRV_SmokedMeat</li>
			</disallowedThingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>MeatRaw</li>
			</categories>
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
		<recipeUsers>
			<li>SRV_Smoker</li>
		</recipeUsers>
	</RecipeDef>

</Defs>
