<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- If Telkir's More Beds Cloth is found, alter the stats of hide beds -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<Operations>
			<li Class="SurvivalistsAdditions.PatchOperationFindMod">
				<modName>[T] MoreBedsCloth</modName>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/ThingDefs/ThingDef[defName = "SRV_HideBed"]/Description</xpath>
				<value>
					<Description>A primitive bed for sleeping in. Slightly less comfortable than a normal bed.</Description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/ThingDefs/ThingDef[defName = "SRV_HideDoubleBed"]/Description</xpath>
				<value>
					<Description>A primitive bed for two people to sleep in. Slightly less comfortable than a normal bed.</Description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/ThingDefs/ThingDef[@Name = "SRV_BedBase"]/statBases/BedRestEffectiveness</xpath>
				<value>
					<BedRestEffectiveness>0.9</BedRestEffectiveness>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/ThingDefs/ThingDef[@Name = "SRV_BedBase"]/statBases/Comfort</xpath>
				<value>
					<Comfort>0.65</Comfort>
				</value>
			</li>
		</Operations>
	</Operation>

</Patch>